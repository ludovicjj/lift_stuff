<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}LiftStuff{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('build/loader.js') }}"></script>
            <script src="{{ asset('build/main.js') }}" defer></script>
            <script src="{{ asset('build/menu.js') }}" defer></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <div class="loader">
        <i class="fa-solid fa-spinner fa-spin"></i>
    </div>
        {% if app.user %}
            {{ include('components/menu.html.twig') }}
        {% endif %}
        <div class="container{% if app.user %} container-content{% endif %}">
            <main>
                {# read and display all flash messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        {{ include('components/alert.html.twig', {state: "info", class:"flash-#{label}", content: message}) }}
                    {% endfor %}
                {% endfor %}
                {% block body %}{% endblock %}
            </main>
        </div>
    </body>
</html>
